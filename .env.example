# Whispey On-Premise Configuration
# Copy this file to .env.local and update the values for your environment

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=production

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=whispey
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_SSL=false

# JWT Secret for Authentication (Change this to a secure random string in production)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# API Keys
WHISPEY_MASTER_KEY=your-master-api-key-here
VOICE_EVALS_MASTER_KEY=your-voice-evals-master-key-here

# OpenAI Configuration (for transcript field extraction and evaluations)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# VAPI Configuration (if using VAPI for voice capabilities)
VAPI_API_KEY=your_vapi_api_key_here

# Optional: Enable HTTPS for production
# HTTPS_KEY_PATH=/path/to/your/private.key
# HTTPS_CERT_PATH=/path/to/your/certificate.crt

# Optional: Redis Configuration for Session Storage (if using Redis instead of database sessions)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# Optional: Email Configuration for notifications
# SMTP_HOST=your_smtp_host
# SMTP_PORT=587
# SMTP_USER=your_smtp_username
# SMTP_PASSWORD=your_smtp_password
# SMTP_FROM=noreply@yourcompany.com

# Security Configuration
# Set to true in production for enhanced security
SECURE_COOKIES=false
# SESSION_TIMEOUT_HOURS=24

# Logging Configuration
LOG_LEVEL=info
# LOG_FILE_PATH=/var/log/whispey/app.log

# Optional: External API integrations (remove if not needed)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1